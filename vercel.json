{
    "version": 2,
    "builds": [
      {
        "src": "api/**/*.js",
        "use": "@vercel/node"
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/recipes",
        "dest": "/api/recipes.js"
      },
      {
        "src": "/api/recipe/(.*)",
        "dest": "/api/recipe.js"
      },
      {
        "src": "/api/([0-9]+)", 
        "dest": "/api/[id].js"  
      },
      {
        "src": "/(.*)",
        "dest": "/public/$1"
      }
    ]
  }
  